<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!--look into Shape-able imageview-->
    <ImageView
        android:id="@+id/icon_reorder_queue_item"
        android:layout_width="@dimen/album_art_small_width"
        android:layout_height="@dimen/album_art_small_height"
        android:layout_margin="@dimen/margin_8dp"
        android:contentDescription="@string/description_reorder_queue_item"
        android:src="@drawable/ic_reorder"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_title"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title_placeholder_text"
        app:layout_constraintBottom_toTopOf="@id/textview_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_reorder_queue_item"
        app:layout_constraintTop_toTopOf="@+id/icon_reorder_queue_item" />

    <TextView
        android:id="@+id/textview_subtitle"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title_placeholder_text"
        app:layout_constraintBottom_toBottomOf="@+id/icon_reorder_queue_item"
        app:layout_constraintEnd_toEndOf="@id/textview_title"
        app:layout_constraintStart_toStartOf="@+id/textview_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_title" />

</androidx.constraintlayout.widget.ConstraintLayout>

