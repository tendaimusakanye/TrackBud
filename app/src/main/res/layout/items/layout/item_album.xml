<?xml version="1.0" encoding="utf-8"?><!--    This or a shape-able imageview-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:clickable="true"
    android:elevation="@dimen/margin_8dp"
    android:focusable="true"
    android:translationZ="@dimen/margin_8dp"
    app:cardCornerRadius="@dimen/margin_8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/discover_album_imageview"
            android:layout_width="@dimen/discover_album_imageview_width"
            android:layout_height="@dimen/discover_album_imageview_height"
            android:clickable="false"
            android:clipToOutline="true"
            android:contentDescription="@string/description_open_album"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/discover_album_textview_title"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/margin_4dp"
            android:textColor="@android:color/black"
            tools:text="@string/title_placeholder_text" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

