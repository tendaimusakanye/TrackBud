<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_minimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:contentDescription="@string/description_minimize_fragment"
        android:src="@drawable/ic_minimize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_album_art_big"
        android:layout_width="@dimen/album_art_big_width"
        android:layout_height="@dimen/album_art_big_height"
        android:layout_margin="@dimen/margin_64dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/textview_track_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_minimize"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_track_title"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:maxLines="3"
        android:text="@string/title_placeholder_text"
        app:layout_constraintEnd_toEndOf="@+id/imageview_album_art_big"
        app:layout_constraintStart_toStartOf="@+id/imageview_album_art_big"
        app:layout_constraintTop_toBottomOf="@+id/imageview_album_art_big" />

    <TextView
        android:id="@+id/textview_artist_name"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/title_placeholder_text"
        app:layout_constraintEnd_toEndOf="@+id/textview_track_title"
        app:layout_constraintStart_toStartOf="@+id/textview_track_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_track_title" />

</androidx.constraintlayout.widget.ConstraintLayout>